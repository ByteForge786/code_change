import pandas as pd

# Load the CSV file into a pandas DataFrame
file_path = 'your_file.csv'  # Replace with the actual file path
df = pd.read_csv(file_path)

# Repeat each row four times
synthetic_df = df.loc[df.index.repeat(4)]

# Reset the index
synthetic_df = synthetic_df.reset_index(drop=True)

# Set the 'instruction' column to an empty string for all rows
synthetic_df['instruction'] = ''

# Save the synthetic data to a new CSV file
synthetic_df.to_csv('synthetic_data.csv', index=False)
